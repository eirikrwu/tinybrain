<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="wiki_zh">
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />

			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />

			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="topcoder" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/wiki_zh" />
		</properties>
	</persistence-unit>

	<persistence-unit name="wiki">
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />

			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />

			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="topcoder" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/wiki" />
		</properties>
	</persistence-unit>

</persistence>
